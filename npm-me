npm config set save-prefix '~'
npm config set init.author.url 'http://hertzber.gs/'
npm config set init.version '0.1.0'
npm config set init.license 'MIT'
npm config set editor 'subl'

#!/usr/bin/env node
/**
 * yayyyy npmmmmm!!!
 *
 * Michael Scott Hertzberg / moimikey
 *
 */
require('shelljs/global')
var inquirer = require('inquirer')

var initAuthorName = 'Michael Scott Hertzberg'
var initAuthorEmail = 'mshertzberg@gmail.com'
var initAuthorUrl = 'http://hertzber.gs/'
var initLicense = 'MIT'
var initVersion = '0.1.0'
var editor = 'subl'
var binLinks = true // npm config set bin-links true


var checkboxes = [].concat({
  type:    'checkbox',
  message: 'Pick your poisons...',
  name:    'packages',
  choices: []
})[
  'npm-environment-setup'
].map(function(package) {
  checkboxes[0].choices.push(package)
})
inquirer.prompt(checkboxes,
function(answers) {
  answers.packages.map(function(package) {
    switch(package) {
    case 'npm-environment-setup':
      exec('')
      break
    }
  })
})
